{% extends 'base.html.twig' %}

{% block title %}New Commantaire{% endblock %}

{% block body %}
<style>
 h1{
    margin-top: 150px;
 }
 .addcom{
     width: 50%;
     margin-bottom: 50px;
     display: flex;
     flex-direction: column;
     column-gap: 10px;
     align-items: center;
     justify-content: center;
     margin-left: auto;
     margin-right: auto;
 }
 .form{
     display: flex;
     flex-direction: column;
 }
</style>
   <div class="addcom">
       <h1>Add Commentaire</h1>

       <div class="form">
           {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
           <div>{{ form_errors(form.ContenuCommantaire) }}</div>
           <div>{{ form_widget(form) }}</div>
           <button class="btn">{{ button_label|default('Add') }}</button>
           {{ form_end(form) }}
       </div>

       <a href="{{ path('app_commantaire_publication_index') }}">back to list</a>
   </div>
{% endblock %}
